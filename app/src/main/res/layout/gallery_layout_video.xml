<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kay.photoboothgallerydemo.VideoGalleryActivity">
    <Button
        android:id="@+id/goto_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="go to photo"
        />

    <Button
        android:id="@+id/decode_to_file"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="decode"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            >
            <SurfaceView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <SurfaceView
                android:id="@+id/sv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            >
            <SurfaceView
                android:id="@+id/sv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"  />
            <SurfaceView
                android:id="@+id/sv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"  />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
